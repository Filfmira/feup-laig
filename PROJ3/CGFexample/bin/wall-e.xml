<anf>


    <globals>
        <drawing mode="point" shading="gouraud" background="0.0 0.0 0.0 1" />
        <culling face="back" order="ccw" />
        <lighting doublesided="true" local="false" enabled="true" ambient="0.2 0.2 0.2 1" />
 
    </globals>


    <cameras initial="landscapez" >
        <ortho id="landscapez" direction="z" near="1" far="100" left="-10" right="10" top="10" bottom="-10" />
        <ortho id="landscapex" direction="x" near="1" far="10" left="-10" right="10" top="10" bottom="-10" />
        <ortho id="landscapey" direction="y" near="1" far="10" left="-10" right="10" top="10" bottom="-10" />
        <perspective id="0" near="1.0" far="20.0" angle="45" pos="15.0 10.0 15.0" target="5.0 0.0 0.0" />
		<perspective id="1" near="1.0" far="20.0" angle="45" pos="-10 3.0 10.0" target="5.0 0.0 0.0" />
    </cameras>

    <lights>

           <light id="0" type="omni" enabled="true" marker="true" pos="0 0 5" >
               <component type="ambient" value="1 1 1 1" />
               <component type="diffuse" value="1 1 1 1" />
               <component type="specular" value="1 1 1 1" />

            </light>

            <light id="1" type="spot" enabled="true" marker="true" pos="5 0 0" target="0 1 0" 
                angle="50" exponent="10" >
                <component type="ambient" value="0.2 0.2 0.2 1" />
                <component type="diffuse" value="1 1 1 1" />
                <component type="specular" value="1 1 1 1" /> 

            </light>  

            <light id="2" type="omni" enabled="true" marker="true" pos="-5 0 0" >
               <component type="ambient" value="1 1 1 1" />
               <component type="diffuse" value="1 1 1 1" />
               <component type="specular" value="1 1 1 1" />

            </light>


    </lights>


    <textures>      
        <texture id="ss" file="metal.jpg" texlength_s="2" texlength_t="2" />
    </textures>

    <!-- bloco de materiais; -->
    <appearances>
        <!-- deve existir um ou mais blocos "appearance" -->
        <!-- IMPORTANTE: -->
        <!--   textureref e opcional, a utilizar caso haja textura associada a esta aparencia -->
        <appearance id="ss" shininess="10" >
            <component type="ambient" value="0.1 0.1 0.1 1" />
            <component type="diffuse" value="0.4 0.33 0.25 1" />
            <component type="specular" value="0.8 0.67 0.5 1" />
        </appearance>

		</appearances>

		<!-- pode não existir qualquer nó “animation” se a cena não tiver animações -->
	<!-- span é o tempo, em segundos, que a animação deve demorar *
	<!-- nesta versão do formato ANF, type pode ter o valor “linear” ou "circular" -->
	<animations>

	</animations>
	
	
    <graph rootid="root">

        <node id="root">

            <transforms>

                <transform type="translate" to="0 0 0" />

            </transforms>
         
            <appearanceref id="ss" />
 
            <primitives>

             </primitives>
              
             <!-- bloco "descendants" -->
            <descendants>
				<noderef id="piece1" />
				<noderef id="piece2" />
            </descendants>
        </node>

