		<node id="piece1">
            <transforms>
                <!-- <transform type="rotate" axis="x" angle="-90" /> -->
            </transforms>
            <appearanceref id="inherit" />
            <primitives>
                <piece textura="horse.png" cor="white" tipo="simples" />
            </primitives>

            <descendants>
            </descendants>
        </node> 
		
		<node id="piece2">
            <transforms>
                <transform type="translate" to="2 0 0" />
            </transforms>
            <appearanceref id="inherit" />
            <primitives>
                <piece textura="tower.png" cor="white" tipo="simples" />
            </primitives>

            <descendants>
            </descendants>
        </node> 
        


    </graph>
</anf>